<h1>Productos</h1>
<div>
    {{#each products}}
    <div>
        <h2>{{this.title}}</h2>
        <p>Categor√≠a: {{this.category}}</p>
        <p>{{this.description}}</p>
        <p>$ {{this.price}}</p>
        <p>{{this.stock}} disponible(s)</p>
        <img src={{this.thumbnail}} alt={{this.title}}>
    </div>
    {{/each}}
    {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}&limit={{limit}}"><button>Anterior</button></a>
    {{/if}}

    {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}&limit={{limit}}"><button>Siguiente</button></a>
    {{/if}}
</div>